  </PackageFiles>
  <InstallChecks>
    <RegistryCheck Property="DotNet47FullLangPack_Release" Key="HKLM\Software\Microsoft\NET Framework Setup\NDP\v4\Full\1046" Value="Release"/>
    <RegistryCheck Property="DotNet47FullLangPack_OS_LCID" Key="HKLM\SYSTEM\CurrentControlSet\Control\MUI\UILanguages\pt-BR" Value="LCID"/>
